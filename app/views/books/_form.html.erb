<%= form_for @book do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>

    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>

    <%= f.fields_for :genre do |g| %>
        <%= g.label "Genre Name" %>
        <%= g.text_field :name %>
    <% end %>

    <%= f.label :number_of_pages, "Number of Pages" %>
    <%= f.number_field :number_of_pages %>

    <%= f.label :author, "Author" %>
    <%= f.text_field :author %>

    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>

    <%= f.submit %>
<% end %>