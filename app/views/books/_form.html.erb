<%= form_for @book do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>

    <%= f.label :summary, "Summary" %>
    <%= f.text_field :summary %>
    <%= f.label "Genre Name" %>
    <%= collection_select :book, :genre_id, Genre.all, :id, :name, include_blank: true %>

    <%= f.label :number_of_pages, "Number of Pages" %>
    <%= f.number_field :number_of_pages %>

    <%= f.label :author, "Author" %>
    <%= f.text_field :author %>

    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>

    <%= f.submit %>
<% end %>