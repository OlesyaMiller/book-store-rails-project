<p><strong>Title:</strong> <%= @book.title %></p>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Number of Pages:</strong> <%= @book.number_of_pages %></p>
<p><strong>Summary:</strong> <%= @book.summary %></p>
<p><strong>Price:</strong> <%= @book.price %></p>
<p><strong>Genre:</strong> <%= @book.genre.name %></p>

<% if current_user.role != 'admin'%>
    <p><strong>Your Credit: <%= current_user.credit %></strong></p>
    <%= form_for @purchase do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %><br/>
        <%= f.hidden_field :book_id, :value => @book.id %>
        <%= f.submit "Purchase This Book" %>
    <% end %>
<% else %>
    <%= link_to "Edit Listing", edit_book_path(@book) %><br/>
    <%= link_to "Delete Listing", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
<% end %>  