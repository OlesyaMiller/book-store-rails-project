<!DOCTYPE html>
<html>
  <head>
    <title>Book Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <ul class="nav justify-content-center border bg-dark">
      <% if current_user.role == 'customer' %>
        <li class="p-4">
          User: <%= current_user.username %>
        </li>
      <% else %>
        <li class="p-4">
          User: Admin
        </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link p-4" href="/">Home</a>
      </li>
      <% if current_user.role != 'customer' %>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= books_path %>">All Listings</a>
      </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= new_user_purchase_path(current_user) %>">Browse Books</a>
      </li>
      <% if current_user.role != 'customer' %>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= new_book_path %>">Create Listing</a>
      </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= user_path(current_user) %>">My Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= logout_path %>">Log Out</a>
      </li>  
    </ul>
  <% end %>

    <div class = "container p-4"> 
        <%= yield %>
    <br/>
    <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %> 

    </div>    
  </body>
</html>
