<%= form_for @purchase do |f| %>
    <%= f.hidden_field :user_id %><br />
    <%= f.label :book_id, "Select Book" %>
    <%= f.collection_select :book_id, Book.all, :id, :title %><br/>
    <%= f.label :location, "Location of the Purchase" %><br/>
    <%= f.text_field :location %><br/>
    <%= f.submit "Purchase This Book" %>
<% end %>